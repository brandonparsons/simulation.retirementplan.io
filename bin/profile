#!/usr/bin/env ruby

pwd = File.expand_path(File.dirname(__FILE__))
puts "Building/running profiler program, copying output to CWD, running pprof tools....."

`go install #{pwd}/../profiler/profiler.go`
result = `$GOPATH/bin/profiler 2>&1`

output_file = result.split("\n").first.match(/.+(\/var\/.*)/)[1]
# --> "/var/folders/4t/khbw8j_x19342lkbf26l5tj40000gn/T/profile841577082/cpu.pprof"

`cp #{output_file} .`
`go tool pprof --pdf $GOPATH/bin/profiler cpu.pprof > callgraph.pdf`
`go tool pprof --text $GOPATH/bin/profiler cpu.pprof > report.txt`

puts "Done!"
